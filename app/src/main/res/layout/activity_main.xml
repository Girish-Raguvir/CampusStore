<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$PlaceholderFragment">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_below="@+id/app_bar"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"

            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRENDING ITEMS"
                android:textSize="25sp" />

            <com.example.android.io2014.ui.CardFrameLayout style="@style/Card">

                <ImageView
                    android:id="@+id/photo"
                    style="@style/CardPhoto"
                    android:src="@drawable/photo1"
                    android:transitionName="photo1" />

                <TextView
                    android:id="@+id/show_photo_1"
                    style="@style/CardTitle"
                    android:text="Hercules Cycle" />

            </com.example.android.io2014.ui.CardFrameLayout>

            <com.example.android.io2014.ui.CardFrameLayout style="@style/Card">

                <ImageView
                    android:id="@id/photo"
                    style="@style/CardPhoto"
                    android:src="@drawable/photo2"
                    android:transitionName="photo2" />

                <TextView
                    android:id="@+id/show_photo_2"
                    style="@style/CardTitle"
                    android:text="Google Nexus 5" />

            </com.example.android.io2014.ui.CardFrameLayout>

            <com.example.android.io2014.ui.CardFrameLayout style="@style/Card">

                <ImageView
                    android:id="@id/photo"
                    style="@style/CardPhoto"
                    android:src="@drawable/photo3"
                    android:transitionName="photo3" />

                <TextView
                    android:id="@+id/show_photo_3"
                    style="@style/CardTitle"
                    android:text="Antelope Canyon" />

            </com.example.android.io2014.ui.CardFrameLayout>


            <com.example.android.io2014.ui.CardFrameLayout style="@style/Card">

                <ImageView
                    android:id="@id/photo"
                    style="@style/CardPhoto"
                    android:src="@drawable/photo4"
                    android:transitionName="photo4" />

                <TextView
                    android:id="@+id/show_photo_4"
                    style="@style/CardTitle"
                    android:text="Lone Pine" />

            </com.example.android.io2014.ui.CardFrameLayout>

        </LinearLayout>

    </ScrollView>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="right|bottom"
        android:background="#1565C0"
        android:elevation="@dimen/elevation_low"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:src="@drawable/plusbutton"
        android:tint="#ffffff"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

<fragment
    android:id="@+id/fragment_navigation_drawer"
    android:name="com.example.android.io2014.NavigationDrawerFragment"
    android:layout_width="@dimen/nav_drawer_width"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:layout="@layout/fragment_navigation_drawer"
    tools:layout="@layout/fragment_navigation_drawer"></fragment>


</android.support.v4.widget.DrawerLayout>