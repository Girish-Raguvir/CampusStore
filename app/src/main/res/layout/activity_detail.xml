<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark_material_light"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.adarsh.apps.campusstore.DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_above="@+id/whiteline"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="New Text"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <LinearLayout
            android:id="@+id/whiteline"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_above="@+id/blackoverlay"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#FFFFFF"
            android:orientation="vertical"></LinearLayout>


        <LinearLayout
            android:id="@+id/blackoverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/black_overlay"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"

            >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/price"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"

                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title"
                android:layout_alignStart="@+id/title"
                android:layout_below="@+id/title"
                android:paddingLeft="@dimen/activity_horizontal_margin"

                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff"
                android:textStyle="bold" />


        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="4">


            <TextView
                android:id="@+id/description1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"

                />


        </ScrollView>

        <LinearLayout
            android:id="@+id/optionbuttons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="center"

            android:padding="0dp">

            <ImageButton
                android:id="@+id/contact"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#0000ffff"
                android:clickable="true"
                android:layout_marginRight="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile" />

            <ImageButton
                android:id="@+id/edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:background="#0000ffff"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/edit"
                android:visibility="invisible" />



            <ImageButton
                android:id="@+id/addfav"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="1dp"
                android:background="#0000ffff"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/fav"

                />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>